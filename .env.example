PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/Invoice

# JWT
JWT_SECRET=change_me

# SMTP defaults (Gmail over STARTTLS on 587)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Auth credentials (prefer these). Fallbacks: GMAIL_USER/GMAIL_APP_PASSWORD
SMTP_USER=your.email@gmail.com
SMTP_PASS=your_16_char_app_password

# Gmail-specific fallback names (supported by code for backwards compatibility)
# GMAIL_USER=your.email@gmail.com
# GMAIL_APP_PASSWORD=your_16_char_app_password

# Optional timeouts (ms)
# SMTP_CONNECTION_TIMEOUT=10000
# SMTP_GREETING_TIMEOUT=10000
# SMTP_SOCKET_TIMEOUT=20000

# For debug only. Do not use in production.
# SMTP_TLS_REJECT_UNAUTHORIZED=false

